@model EndPointsViewModel

<br />
    <div class="nav-wrapper white">
        <div class="nav-wrapper">
            <a asp-controller="EndPoints" asp-action="GetEndpoints" class="breadcrumb light-blue-text">EndPoints</a>
            <a asp-action="DeleteEndpoint" asp-controller="EndPoints" asp-route-id="@Model.EndPointId" asp-route-uri="@Model.EndPointUri" class="breadcrumb light-blue-text">@Model.EndPointUri</a>
        </div>
    </div>


<form asp-controller="EndPoints" asp-action="DeleteEndPoint" method="post" class="col-s06">

    <input type="hidden" name="EndPointId" id="EndPointId" value="@Model.EndPointId" />

    <div class="row">
        <h5 asp-for="Name">@Model.EndPointUri</h5>
    </div>

    <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Delete
            <i class="material-icons right"></i>
        </button>
    </div>

</form>