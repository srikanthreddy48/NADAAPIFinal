@model EndPointsViewModel
<br />

    <div class="nav-wrapper white">
        <div class="nav-wrapper">
            <a asp-controller="EndPoints" asp-action="GetEndpoints" class="breadcrumb light-blue-text">EndPoints</a>
            <a asp-action="CreateEndPoint" asp-controller="EndPoints" class="breadcrumb light-blue-text">AddEndPoint</a>
        </div>
    </div>


<form asp-controller="EndPoints" asp-action="CreateEndPoint" method="post" class="col-s06">
    <div class="row">
        <div class="input-field col s3">
            <input asp-for="EndPointUri" type="text" class="validate">
            <label asp-for="EndPointUri">EndPoint</label>
        </div>
    </div>
    <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Add EndPoint
            <i class="material-icons right"></i>
        </button>
    </div>

</form>